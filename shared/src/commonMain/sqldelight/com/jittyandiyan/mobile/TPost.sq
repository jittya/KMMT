


CREATE TABLE TPost (
  ID INTEGER PRIMARY KEY AUTOINCREMENT NOT NULL ,
  NAME TEXT,
  EMAIL TEXT,
  POST_ID INTEGER,
  BODY TEXT
);

addPost:
INSERT INTO TPost (ID,NAME,EMAIL,POST_ID,BODY)
VALUES (?,?,?,?,?);

getPosts:
SELECT * FROM TPost WHERE POST_ID = ?;

deletePosts:
DELETE FROM TPost WHERE POST_ID = ?;